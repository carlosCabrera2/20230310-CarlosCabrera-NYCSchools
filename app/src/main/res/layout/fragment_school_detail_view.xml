<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
   >

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_school_name"
            android:text="@string/school_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textStyle="bold"
            />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            >
                <TableRow
                    android:background="#6FB4BCE1"
                    >

                        <TextView
                            android:text="@string/website"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:layout_marginEnd="2dp"
                            android:background="@color/purple_200"
                            android:textColor="@color/white"/>

                            <TextView
                                android:id="@+id/tv_school_website"
                                android:text="@string/website_url"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="13sp"/>

                            <TextView
                                android:text="@string/email"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15sp"
                                android:layout_marginEnd="2dp"
                                android:background="@color/purple_200"
                                android:textColor="@color/white"/>


                             <TextView
                                android:id="@+id/tv_school_email"
                                android:text="@string/emailContent"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="15sp"/>

                </TableRow>

            <TableRow
                android:background="#6FB4BCE1"
                >
                        <TextView
                            android:text="@string/phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:layout_marginEnd="2dp"
                            android:background="@color/purple_200"
                            android:textColor="@color/white"/>

                        <TextView
                            android:id="@+id/tv_school_phone_number"
                            android:text="@string/phone_number"
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:layout_marginEnd="2dp"/>

                        <TextView
                            android:text="@string/fax"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:layout_marginEnd="2dp"
                            android:background="@color/purple_200"
                            android:textColor="@color/white"/>

                        <TextView
                            android:id="@+id/tv_school_fax_number"
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:text="@string/fax_number"
                            android:textSize="15sp"
                            />
            </TableRow>

            <TableRow
                android:background="#6FB4BCE1">
                <TextView
                    android:text="@string/start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_marginEnd="2dp"
                    android:background="@color/purple_200"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/tv_school_start_time"
                    android:text="@string/start_time"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    />

                <TextView
                    android:text="@string/end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_marginEnd="2dp"
                    android:background="@color/purple_200"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/tv_school_end_time"
                    android:text="@string/end_time"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"/>
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#6FB4BCE1"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            >
                        <TextView
                            android:text="@string/addressTitle"
                            android:textSize="15sp"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/purple_200"/>

                        <TextView
                            android:id="@+id/tv_school_address"
                            android:text="@string/address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:layout_marginEnd="3dp"
                            android:layout_marginStart="2dp"/>

                        <TextView
                            android:id="@+id/tv_school_city"
                            android:text="@string/city"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:layout_marginStart="1dp"
                            android:layout_marginEnd="3dp"/>

                        <TextView
                            android:id="@+id/tv_school_state"
                            android:text="@string/ny"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:layout_marginStart="1dp"
                            android:layout_marginEnd="3dp" />

                        <TextView
                            android:id="@+id/tv_school_zipcode"
                            android:text="@string/zip_code"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:layout_marginStart="1dp"
                            />

        </LinearLayout>


        <TextView
            android:id="@+id/tv_overview_paragraph"
            android:text="@string/overview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            />

        <TextView
            android:text="@string/sat_information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="15dp"
            />



        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            >

            <TableRow
                android:background="@color/purple_200"
                android:padding="5dp">

                <TextView
                    android:text="@string/school_subject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:text="@string/score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </TableRow>


            <TableRow
                android:background="#6FB4BCE1"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/reading"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvReadingScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/_300"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow
                android:background="#6FB4BCE1"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/math"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvMathScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/_450"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow
                android:background="#6FB4BCE1"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/writing"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvWritingScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/_230"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
            </TableRow>
            <TableRow
                android:background="@color/white"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/average_test_takers"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvTakers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/_230"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
            </TableRow>
        </TableLayout>





    </androidx.appcompat.widget.LinearLayoutCompat>
</ScrollView>